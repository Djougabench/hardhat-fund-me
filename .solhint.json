{
  "extends": "solhint:recommended",
  "rules": {
    "func-visibility": ["warn", "ignoreContructors"],
    "func-order": "off",
    "mark-callable-contracts": "off",
    "no-empty-blocks": "off",
    "compiler-version": ["error", ">=0.8.0 <0.9.0"],
    "private-vars-leading-underscore": "error",
    "reason-string": "off"
  }
}
